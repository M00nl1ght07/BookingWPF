<Page x:Class="BookingWPF.AddHotelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AddHotelPage"
      Height="720">

    <Page.Resources>
        <Style x:Key="ScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="#1E1E1E" 
                                    CornerRadius="5"/>
                            <Track x:Name="PART_Track" 
                                   IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Border Background="#404040" 
                                                        CornerRadius="5"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="10,5">
                            <ContentPresenter>
                                <ContentPresenter.Resources>
                                    <!-- Устанавливаем белый цвет текста для всего содержимого -->
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#404040"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Background="#2D2D2D"
                    CornerRadius="15"
                    Width="500"
                    Padding="40"
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Добавление отеля"
                              FontSize="28"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,30"/>

                    <!-- Название -->
                    <TextBlock Text="Название"
                              Foreground="White"
                              Margin="0,0,0,5"/>
                    <TextBox x:Name="NameTextBox"
                             Background="#1E1E1E"
                             Foreground="White"
                             Height="40"
                             Padding="10,0"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Margin="0,0,0,15"/>

                    <!-- Город -->
                    <TextBlock Text="Город"
                              Foreground="White"
                              Margin="0,0,0,5"/>
                    <TextBox x:Name="CityTextBox"
                             Background="#1E1E1E"
                             Foreground="White"
                             Height="40"
                             Padding="10,0"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Margin="0,0,0,15"/>

                    <!-- Рейтинг -->
                    <TextBlock Text="Рейтинг (1-5)"
                              Foreground="White"
                              Margin="0,0,0,5"/>
                    <ComboBox x:Name="RatingComboBox"
                             Height="40"
                             Margin="0,0,0,15">
                        <ComboBox.Template>
                            <ControlTemplate TargetType="ComboBox">
                                <Grid>
                                    <ToggleButton Name="ToggleButton"
                                                Background="#1E1E1E"
                                                BorderBrush="Transparent"
                                                Foreground="White"
                                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="0">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="20"/>
                                                        </Grid.ColumnDefinitions>
                                                        <ContentPresenter Grid.Column="0"
                                                                        Margin="10,0,0,0"
                                                                        Content="{TemplateBinding Content}"
                                                                        VerticalAlignment="Center"/>
                                                        <Path Grid.Column="1"
                                                              Fill="White"
                                                              Data="M0,0 L4,4 L8,0"
                                                              VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                        <ToggleButton.Content>
                                            <ContentPresenter Content="{TemplateBinding SelectionBoxItem}"
                                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>
                                        </ToggleButton.Content>
                                    </ToggleButton>
                                    <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                                           Placement="Bottom"
                                           AllowsTransparency="True">
                                        <Border Background="#1E1E1E"
                                                BorderThickness="0">
                                            <StackPanel IsItemsHost="True"/>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </ControlTemplate>
                        </ComboBox.Template>
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="#1E1E1E"/>
                                <Setter Property="Padding" Value="10,5"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#404040"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#007ACC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                    </ComboBox>

                    <!-- Базовая цена -->
                    <TextBlock Text="Базовая цена"
                              Foreground="White"
                              Margin="0,0,0,5"/>
                    <TextBox x:Name="BasePriceTextBox"
                             Background="#1E1E1E"
                             Foreground="White"
                             Height="40"
                             Padding="10,0"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Margin="0,0,0,15"/>

                    <!-- Описание -->
                    <TextBlock Text="Описание"
                              Foreground="White"
                              Margin="0,0,0,5"/>
                    <TextBox x:Name="DescriptionTextBox"
                             Background="#1E1E1E"
                             Foreground="White"
                             Height="100"
                             Padding="10"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalContentAlignment="Top"
                             BorderThickness="0"
                             Margin="0,0,0,25"/>

                    <!-- Фото -->
                    <TextBlock Text="Фото отеля"
                              Foreground="White"
                              Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="PhotoPathTextBox"
                                 Background="#1E1E1E"
                                 Foreground="White"
                                 Height="40"
                                 Padding="10,0"
                                 VerticalContentAlignment="Center"
                                 BorderThickness="0"
                                 IsReadOnly="True"/>
                        <Button Content="Выбрать фото"
                                Grid.Column="1"
                                Background="#007ACC"
                                Foreground="White"
                                Height="40"
                                Padding="20,0"
                                Margin="10,0,0,0"
                                BorderThickness="0"
                                Click="SelectPhoto_Click"/>
                    </Grid>

                    <!-- Кнопки -->
                    <Button Content="Добавить отель"
                            Background="#007ACC"
                            Foreground="White"
                            Height="40"
                            BorderThickness="0"
                            Margin="0,0,0,10"
                            Click="AddHotel_Click"/>

                    <Button Content="Отмена"
                            Background="#DC3545"
                            Foreground="White"
                            Height="40"
                            BorderThickness="0"
                            Click="Cancel_Click"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <ScrollBar Style="{StaticResource ScrollBarStyle}" 
                   HorizontalAlignment="Right" 
                   Width="10"/>
    </Grid>
</Page>