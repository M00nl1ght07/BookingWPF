<Page x:Class="BookingWPF.AdminPanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AdminPanelPage">

    <Page.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="#1E1E1E"/>
            <Setter Property="AlternatingRowBackground" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#1E1E1E"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Панель администратора"
                      FontSize="28"
                      Foreground="White"/>
            <TextBlock Text="admin@example.com"
                      FontSize="16"
                      Foreground="#E0E0E0"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Основной контент -->
        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="MinWidth" Value="150"/>
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="Background" Value="#2D2D2D"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Margin" Value="0,0,10,0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5">
                                    <ContentPresenter ContentSource="Header"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#007ACC"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Пользователи -->
            <TabItem Header="Пользователи">
                <Border Background="#2D2D2D" 
                        CornerRadius="10" 
                        Padding="20">
                    <DataGrid AutoGenerateColumns="False" 
                             Background="Transparent"
                             BorderThickness="0"
                             RowBackground="#1E1E1E"
                             AlternatingRowBackground="#252525"
                             Foreground="White"
                             GridLinesVisibility="None">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Имя" Width="*"/>
                            <DataGridTextColumn Header="Email" Width="*"/>
                            <DataGridTextColumn Header="Дата регистрации" Width="*"/>
                            <DataGridTextColumn Header="Бронирований" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>

            <!-- Управление отелями -->
            <TabItem Header="Отели">
                <Border Background="#2D2D2D" 
                        CornerRadius="10" 
                        Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Кнопки управления -->
                        <StackPanel Orientation="Horizontal" 
                                  Margin="0,0,0,20">
                            <Button Content="Добавить отель"
                                    Background="#007ACC"
                                    Foreground="White"
                                    Padding="20,10"
                                    Height="40"
                                    BorderThickness="0"
                                    Margin="0,0,10,0"/>
                            <Button Content="Добавить номер"
                                    Background="#28A745"
                                    Foreground="White"
                                    Padding="20,10"
                                    Height="40"
                                    BorderThickness="0"
                                    Margin="0,0,10,0"/>
                            <Button Content="Добавить в популярные"
                                    Background="#007ACC"
                                    Foreground="White"
                                    Padding="20,10"
                                    Height="40"
                                    BorderThickness="0"/>
                        </StackPanel>

                        <!-- Список отелей и номеров -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="400"/>
                            </Grid.ColumnDefinitions>

                            <!-- Список отелей -->
                            <DataGrid AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Название" Width="*"/>
                                    <DataGridTextColumn Header="Город" Width="*"/>
                                    <DataGridTextColumn Header="Рейтинг" Width="Auto"/>
                                    <DataGridTextColumn Header="Номеров" Width="Auto"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Разделитель -->
                            <GridSplitter Grid.Column="1" 
                                         Width="5"
                                         Background="#1E1E1E"
                                         HorizontalAlignment="Center"
                                         Margin="10,0"/>

                            <!-- Список номеров выбранного отеля -->
                            <Border Grid.Column="2" 
                                    Background="#1E1E1E"
                                    CornerRadius="5"
                                    Padding="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Номера отеля"
                                             FontSize="18"
                                             Foreground="White"
                                             Margin="0,0,0,10"/>

                                    <DataGrid Grid.Row="1" 
                                             AutoGenerateColumns="False">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Тип номера" Width="*"/>
                                            <DataGridTextColumn Header="Площадь" Width="Auto"/>
                                            <DataGridTextColumn Header="Вместимость" Width="Auto"/>
                                            <DataGridTextColumn Header="Цена" Width="Auto"/>
                                            <DataGridTemplateColumn Width="Auto">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button Content="✎"
                                                                    Background="#007ACC"
                                                                    Foreground="White"
                                                                    Width="30"
                                                                    Height="30"
                                                                    BorderThickness="0"
                                                                    Margin="0,0,5,0"/>
                                                            <Button Content="✕"
                                                                    Background="#DC3545"
                                                                    Foreground="White"
                                                                    Width="30"
                                                                    Height="30"
                                                                    BorderThickness="0"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Бронирования -->
            <TabItem Header="Бронирования">
                <Border Background="#2D2D2D" 
                        CornerRadius="10" 
                        Padding="20">
                    <DataGrid AutoGenerateColumns="False"
                             Background="Transparent"
                             BorderThickness="0"
                             RowBackground="#1E1E1E"
                             AlternatingRowBackground="#252525"
                             Foreground="White"
                             GridLinesVisibility="None">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Отель" Width="*"/>
                            <DataGridTextColumn Header="Номер" Width="*"/>
                            <DataGridTextColumn Header="Гость" Width="*"/>
                            <DataGridTextColumn Header="Даты" Width="*"/>
                            <DataGridTextColumn Header="Статус" Width="Auto"/>
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Отменить"
                                                Background="#DC3545"
                                                Foreground="White"
                                                Padding="10,5"
                                                BorderThickness="0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Кнопка выхода -->
        <Button Content="Выйти"
                Grid.Row="0"
                Background="#DC3545"
                Foreground="White"
                Padding="20,10"
                Height="40"
                BorderThickness="0"
                HorizontalAlignment="Right"
                Click="Logout_Click"/>
    </Grid>
</Page>