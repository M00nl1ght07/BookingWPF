<Page x:Class="BookingWPF.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="BookingPage">

    <Grid Margin="20">
        <Border Background="#2D2D2D"
                CornerRadius="15"
                Width="600"
                Padding="40">
            <StackPanel>
                <TextBlock Text="Подтверждение бронирования"
                          FontSize="28"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <!-- Информация о номере -->
                <TextBlock x:Name="HotelNameText"
                          FontSize="20"
                          Foreground="White"
                          Margin="0,0,0,5"/>

                <TextBlock x:Name="RoomTypeText"
                          FontSize="16"
                          Foreground="#E0E0E0"
                          Margin="0,0,0,20"/>

                <!-- Даты -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Дата заезда -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Дата заезда"
                                  Foreground="White"
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="CheckInText"
                                  Foreground="#E0E0E0"
                                  FontSize="16"/>
                    </StackPanel>

                    <!-- Дата выезда -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Дата выезда"
                                  Foreground="White"
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="CheckOutText"
                                  Foreground="#E0E0E0"
                                  FontSize="16"/>
                    </StackPanel>
                </Grid>

                <!-- Информация о госте -->
                <TextBlock Text="Информация о госте"
                          Foreground="White"
                          FontSize="18"
                          Margin="0,0,0,10"/>

                <TextBlock x:Name="GuestNameText"
                          Foreground="#E0E0E0"
                          Margin="0,0,0,5"/>

                <TextBlock x:Name="GuestEmailText"
                          Foreground="#E0E0E0"
                          Margin="0,0,0,20"/>

                <!-- Итоговая стоимость -->
                <Border Background="#1E1E1E"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Стоимость за ночь:"
                                  Foreground="White"/>
                        <TextBlock x:Name="PricePerNightText"
                                  Grid.Column="1"
                                  Foreground="White"/>

                        <TextBlock Text="Количество ночей:"
                                  Grid.Row="1"
                                  Foreground="White"
                                  Margin="0,5,0,5"/>
                        <TextBlock x:Name="NightsCountText"
                                  Grid.Row="1"
                                  Grid.Column="1"
                                  Foreground="White"
                                  Margin="0,5,0,5"/>

                        <TextBlock Text="Итого к оплате:"
                                  Grid.Row="2"
                                  Foreground="White"
                                  FontWeight="Bold"/>
                        <TextBlock x:Name="TotalPriceText"
                                  Grid.Row="2"
                                  Grid.Column="1"
                                  Foreground="#00A0FF"
                                  FontWeight="Bold"/>
                    </Grid>
                </Border>

                <!-- Кнопки -->
                <Button Content="Подтвердить бронирование"
                        Background="#007ACC"
                        Foreground="White"
                        Height="40"
                        BorderThickness="0"
                        Margin="0,0,0,10"
                        Click="ConfirmBooking_Click"/>

                <Button Content="Отмена"
                        Background="#DC3545"
                        Foreground="White"
                        Height="40"
                        BorderThickness="0"
                        Click="Cancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>