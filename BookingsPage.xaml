<Page x:Class="BookingWPF.BookingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="BookingsPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Мои бронирования"
                  FontSize="28"
                  Foreground="White"
                  Margin="0,0,0,20"/>

        <!-- Вкладки -->
        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="MinWidth" Value="200"/>
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="Background" Value="#2D2D2D"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Margin" Value="0,0,10,0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5">
                                    <ContentPresenter ContentSource="Header"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#007ACC"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- Активные бронирования -->
            <TabItem Header="Активные бронирования">
                <ScrollViewer>
                    <StackPanel>
                        <!-- Карточка бронирования -->
                        <Border Background="#2D2D2D"
                                CornerRadius="10"
                                Margin="0,10"
                                Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Изображение отеля -->
                                <Border Background="#1E1E1E"
                                        Height="150"/>

                                <!-- Информация о бронировании -->
                                <StackPanel Grid.Column="1" Margin="20,0">
                                    <TextBlock Text="Гранд Отель"
                                              FontSize="20"
                                              Foreground="White"
                                              FontWeight="Bold"/>
                                    <TextBlock Text="Москва"
                                              FontSize="16"
                                              Foreground="#E0E0E0"
                                              Margin="0,5"/>
                                    <TextBlock Text="Даты: 25.03.2024 - 28.03.2024"
                                              FontSize="14"
                                              Foreground="#E0E0E0"
                                              Margin="0,5"/>
                                    <TextBlock Text="Люкс с видом на город"
                                              FontSize="14"
                                              Foreground="#E0E0E0"/>
                                    <TextBlock Text="15000₽"
                                              FontSize="18"
                                              Foreground="#00A0FF"
                                              FontWeight="SemiBold"
                                              Margin="0,10"/>
                                </StackPanel>

                                <!-- Кнопки действий -->
                                <StackPanel Grid.Column="2" 
                                          VerticalAlignment="Center"
                                          MinWidth="200">
                                    <Button Content="Отменить"
                                            Background="#DC3545"
                                            Foreground="White"
                                            Padding="20,10"
                                            Height="40"
                                            Margin="0,5,0,10"
                                            BorderThickness="0"/>
                                    <Button Content="Изменить"
                                            Background="#007ACC"
                                            Foreground="White"
                                            Padding="20,10"
                                            Height="40"
                                            BorderThickness="0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- История бронирований -->
            <TabItem Header="История бронирований">
                <ScrollViewer>
                    <StackPanel>
                        <!-- Карточка завершенного бронирования -->
                        <Border Background="#2D2D2D"
                                CornerRadius="10"
                                Margin="0,10"
                                Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Background="#1E1E1E"
                                        Height="150"/>

                                <StackPanel Grid.Column="1" Margin="20,0">
                                    <TextBlock Text="Приморский Спа-Отель"
                                              FontSize="20"
                                              Foreground="White"
                                              FontWeight="Bold"/>
                                    <TextBlock Text="Сочи"
                                              FontSize="16"
                                              Foreground="#E0E0E0"
                                              Margin="0,5"/>
                                    <TextBlock Text="Даты: 15.02.2024 - 20.02.2024"
                                              FontSize="14"
                                              Foreground="#E0E0E0"
                                              Margin="0,5"/>
                                    <TextBlock Text="Стандартный номер"
                                              FontSize="14"
                                              Foreground="#E0E0E0"/>
                                    <TextBlock Text="25000₽"
                                              FontSize="18"
                                              Foreground="#00A0FF"
                                              FontWeight="SemiBold"
                                              Margin="0,10"/>
                                    <TextBlock Text="Завершено"
                                              FontSize="14"
                                              Foreground="#28A745"/>
                                </StackPanel>

                                <Button Grid.Column="2"
                                        Content="Забронировать снова"
                                        Background="#007ACC"
                                        Foreground="White"
                                        Padding="20,10"
                                        Height="40"
                                        MinWidth="200"
                                        VerticalAlignment="Center"
                                        BorderThickness="0"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Page> 