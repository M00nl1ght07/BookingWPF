<Page x:Class="BookingWPF.HomePage"

      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

      Title="HomePage">

    <Page.Resources>
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Rectangle Fill="#007ACC" RadiusX="4" RadiusY="4"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Track x:Name="PART_Track" IsDirectionReversed="true">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="{x:Static ScrollBar.PageUpCommand}" Opacity="0"/>
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Style="{StaticResource ScrollBarThumb}"/>
                            </Track.Thumb>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="{x:Static ScrollBar.PageDownCommand}" Opacity="0"/>
                            </Track.IncreaseRepeatButton>
                        </Track>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel>
            <!-- Приветственный текст -->
            <TextBlock Text="Добро пожаловать в систему бронирования отелей"
                       FontSize="28" 
                       Foreground="White"
                       Margin="20,30,20,20"
                       TextAlignment="Center"/>

            <!-- Поисковая панель -->
            <Border Background="#2D2D2D"
                    Margin="20"
                    Padding="20"
                    CornerRadius="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="CityComboBox" 
                              Grid.Column="0" 
                              Margin="5"
                              Padding="10">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#1E1E1E"/>
                            </Style>
                        </ComboBox.Style>
                        <ComboBoxItem IsSelected="True" Foreground="#666666">Выберите город</ComboBoxItem>
                    </ComboBox>

                    <DatePicker x:Name="CheckInDatePicker" 
                                Grid.Column="1" 
                                Margin="5">
                        <DatePicker.Style>
                            <Style TargetType="DatePicker">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#1E1E1E"/>
                            </Style>
                        </DatePicker.Style>
                    </DatePicker>

                    <DatePicker x:Name="CheckOutDatePicker" 
                                Grid.Column="2" 
                                Margin="5">
                        <DatePicker.Style>
                            <Style TargetType="DatePicker">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#1E1E1E"/>
                            </Style>
                        </DatePicker.Style>
                    </DatePicker>

                    <Button Grid.Column="2" 
                            Content="Найти отели"
                            Background="#007ACC"
                            Foreground="White"
                            Padding="20,10"
                            Width="200"
                            HorizontalAlignment="Center"
                            BorderThickness="0"
                            Click="SearchHotels_Click"/>
                </Grid>
            </Border>

            <!-- Популярные отели -->
            <TextBlock Text="Популярные отели" 
                      FontSize="24" 
                      Foreground="White"
                      Margin="20,0,20,20"/>

            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                         Margin="20,0,20,40">
                <ScrollViewer.Resources>
                    <!-- Стиль для горизонтального скроллбара -->
                    <Style x:Key="HorizontalScrollBarThumb" TargetType="{x:Type Thumb}">
                        <Setter Property="OverridesDefaultStyle" Value="true"/>
                        <Setter Property="IsTabStop" Value="false"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Thumb}">
                                    <Rectangle Fill="#007ACC" RadiusX="4" RadiusY="4"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style TargetType="{x:Type ScrollBar}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Height" Value="8"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ScrollBar}">
                                    <Grid Background="Transparent">
                                        <Border Background="#2D2D2D" CornerRadius="4"/>
                                        <Track x:Name="PART_Track">
                                            <Track.DecreaseRepeatButton>
                                                <RepeatButton Command="{x:Static ScrollBar.PageLeftCommand}" 
                                                            Background="Transparent"
                                                            Opacity="0"/>
                                            </Track.DecreaseRepeatButton>
                                            <Track.Thumb>
                                                <Thumb Style="{StaticResource HorizontalScrollBarThumb}"/>
                                            </Track.Thumb>
                                            <Track.IncreaseRepeatButton>
                                                <RepeatButton Command="{x:Static ScrollBar.PageRightCommand}" 
                                                            Background="Transparent"
                                                            Opacity="0"/>
                                            </Track.IncreaseRepeatButton>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ScrollViewer.Resources>
                
                <StackPanel x:Name="PopularHotelsPanel" 
                            Orientation="Horizontal">
                    <!-- Динамическое добавление карточек -->
                </StackPanel>
            </ScrollViewer>

            <!-- Спецпредложения -->
            <TextBlock Text="Специальные предложения" 
                      FontSize="24" 
                      Foreground="White"
                      Margin="20,0,20,20"/>

            <Grid Margin="20,0,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Спецпредложение 1 -->
                <Border Grid.Column="0"
                        Height="200"
                        Margin="0,0,10,0"
                        Background="#2D2D2D"
                        CornerRadius="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="15" VerticalAlignment="Center">
                            <TextBlock Text="Скидка 20%"
                                       FontSize="24"
                                       Foreground="#007ACC"
                                       FontWeight="Bold"/>
                            <TextBlock Text="на бронирование от 3-х ночей"
                                       FontSize="16"
                                       Foreground="White"
                                       TextWrapping="Wrap"
                                       Margin="0,10"/>
                            <Button Content="Узнать больше"
                                    Background="#007ACC"
                                    Foreground="White"
                                    Padding="20,5"
                                    BorderThickness="0"
                                    HorizontalAlignment="Left"
                                    Click="SpecialOffer_Click"/>
                        </StackPanel>
                        <Border Grid.Column="1" 
                                Background="#1E1E1E"
                                CornerRadius="0,10,10,0">
                            <Image x:Name="Image1"
                                   Source="pack://application:,,,/BookingWPF;component/Photos/skidka1.jpg"
                                   Stretch="UniformToFill"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Спецпредложение 2 -->
                <Border Grid.Column="1"
                        Height="200"
                        Margin="10,0,0,0"
                        Background="#2D2D2D"
                        CornerRadius="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="15" VerticalAlignment="Center">
                            <TextBlock Text="Бонусная программа"
                                       FontSize="24"
                                       Foreground="#007ACC"
                                       FontWeight="Bold"/>
                            <TextBlock Text="Получайте до 10% кешбэка за каждое бронирование"
                                       FontSize="16"
                                       Foreground="White"
                                       TextWrapping="Wrap"
                                       Margin="0,10"/>
                            <Button Content="Подробнее"
                                    Background="#007ACC"
                                    Foreground="White"
                                    Padding="20,5"
                                    BorderThickness="0"
                                    HorizontalAlignment="Left"
                                    Click="SpecialOffer_Click"/>
                        </StackPanel>
                        <Border Grid.Column="1" 
                                Background="#1E1E1E"
                                CornerRadius="0,10,10,0">
                            <Image x:Name="Image2"
                                   Source="pack://application:,,,/BookingWPF;component/Photos/cashback10.png"
                                   Stretch="UniformToFill"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page> 