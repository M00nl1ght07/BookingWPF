<Page x:Class="BookingWPF.HotelsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="HotelsPage">

    <Page.Resources>
        <Style x:Key="CustomCheckBoxStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Grid x:Name="templateRoot" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="checkBoxBorder" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    Width="18"
                                    Height="18"
                                    Margin="0,0,8,0"
                                    CornerRadius="3">
                                <Path x:Name="checkMark"
                                      Data="M1,9 L6,13 L14,3"
                                      Stroke="#007ACC"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Grid.Column="1" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter Property="Visibility" Value="Visible" TargetName="checkMark"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" Value="#2D2D2D" TargetName="checkBoxBorder"/>
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Фильтры слева -->
        <Border Background="#2D2D2D"
                CornerRadius="15"
                Padding="20"
                Margin="0,0,20,0">
            <StackPanel>
                <TextBlock Text="Фильтры"
                          FontSize="24"
                          Foreground="White"
                          Margin="0,0,0,20"/>

                <!-- Фильтр по цене -->
                <TextBlock Text="Цена за ночь"
                          FontSize="16"
                          Foreground="White"
                          Margin="0,0,0,10"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" 
                            Background="#1E1E1E"
                            Foreground="White"
                            CaretBrush="White"
                            BorderBrush="#404040"
                            BorderThickness="1"
                            Height="40"
                            Padding="10,0"
                            VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type TextBox}">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#007ACC"/>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#007ACC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    
                    <TextBlock Grid.Column="1" 
                              Text=" - "
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="10,0"/>
                              
                    <TextBox Grid.Column="2" 
                            Background="#1E1E1E"
                            Foreground="White"
                            CaretBrush="White"
                            BorderBrush="#404040"
                            BorderThickness="1"
                            Height="40"
                            Padding="10,0"
                            VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type TextBox}">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#007ACC"/>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#007ACC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>

                <!-- Фильтр по рейтингу -->
                <TextBlock Text="Рейтинг"
                          FontSize="16"
                          Foreground="White"
                          Margin="0,0,0,10"/>
                <StackPanel Margin="0,0,0,20">
                    <CheckBox Content="5 звезд" 
                             Style="{StaticResource CustomCheckBoxStyle}"/>
                    <CheckBox Content="4 звезды" 
                             Style="{StaticResource CustomCheckBoxStyle}"/>
                    <CheckBox Content="3 звезды" 
                             Style="{StaticResource CustomCheckBoxStyle}"/>
                    <CheckBox Content="2 звезды" 
                             Style="{StaticResource CustomCheckBoxStyle}"/>
                </StackPanel>

                <!-- Удобства -->
                <TextBlock Text="Удобства"
                          FontSize="16"
                          Foreground="White"
                          Margin="0,0,0,10"/>
                <StackPanel Margin="0,0,0,20">
                    <CheckBox Content="Wi-Fi" 
                             Style="{StaticResource CustomCheckBoxStyle}"/>
                    <CheckBox Content="Парковка" 
                             Style="{StaticResource CustomCheckBoxStyle}"/>
                    <CheckBox Content="Бассейн" 
                             Style="{StaticResource CustomCheckBoxStyle}"/>
                    <CheckBox Content="Фитнес-центр" 
                             Style="{StaticResource CustomCheckBoxStyle}"/>
                    <CheckBox Content="Ресторан" 
                             Style="{StaticResource CustomCheckBoxStyle}"/>
                    <CheckBox Content="Спа-центр" 
                             Style="{StaticResource CustomCheckBoxStyle}"/>
                </StackPanel>

                <Button Content="Применить фильтры"
                        Background="#007ACC"
                        Foreground="White"
                        Padding="20,10"
                        BorderThickness="0"/>
            </StackPanel>
        </Border>

        <!-- Список отелей справа -->
        <ScrollViewer Grid.Column="1">
            <WrapPanel>
                <!-- Карточки отелей -->
                <Border Width="300" 
                        Height="400"
                        Margin="0,0,20,20"
                        Background="#2D2D2D"
                        CornerRadius="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Source="https://via.placeholder.com/300x200"
                               Stretch="UniformToFill"/>
                        <StackPanel Grid.Row="1" Margin="15">
                            <TextBlock Text="Гранд Отель"
                                      FontSize="18"
                                      Foreground="White"
                                      FontWeight="Bold"/>
                            <TextBlock Text="Москва"
                                      FontSize="14"
                                      Foreground="#E0E0E0"/>
                            <TextBlock Text="От 5000₽ за ночь"
                                      FontSize="16"
                                      Foreground="#00A0FF"
                                      FontWeight="SemiBold"
                                      Margin="0,10"/>
                            <TextBlock Text="Отель в центре города с видом на реку. Wi-Fi, парковка, ресторан."
                                      FontSize="14"
                                      Foreground="#E0E0E0"
                                      TextWrapping="Wrap"
                                      Margin="0,0,0,10"/>
                            <Button Content="Забронировать"
                                    Background="#007ACC"
                                    Foreground="White"
                                    Padding="20,5"
                                    Click="ViewRooms_Click"
                                    BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Добавьте еще карточек отелей -->
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>