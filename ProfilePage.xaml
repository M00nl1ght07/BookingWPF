<Page x:Class="BookingWPF.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ProfilePage">

    <Page.Resources>
        <Style x:Key="CustomCheckBoxStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Grid x:Name="templateRoot" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="checkBoxBorder" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    Width="18"
                                    Height="18"
                                    Margin="0,0,8,0"
                                    CornerRadius="3">
                                <Path x:Name="checkMark"
                                      Data="M1,9 L6,13 L14,3"
                                      Stroke="#007ACC"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Grid.Column="1" 
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter Property="Visibility" Value="Visible" TargetName="checkMark"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" Value="#2D2D2D" TargetName="checkBoxBorder"/>
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Личный кабинет"
                  FontSize="28"
                  Foreground="White"
                  Margin="0,0,0,20"/>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Информация о пользователе -->
            <Border Background="#2D2D2D"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,20,0">
                <StackPanel>
                    <!-- Аватар -->
                    <Border Width="150"
                            Height="150"
                            Background="#1E1E1E"
                            CornerRadius="75"
                            Margin="0,0,0,20"/>

                    <!-- Информация -->
                    <TextBlock Text="Иван Иванов"
                              FontSize="24"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,5"/>

                    <TextBlock Text="ivan@example.com"
                              FontSize="16"
                              Foreground="#E0E0E0"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>

                    <!-- Кнопки -->
                    <Button Content="Редактировать профиль"
                            Background="#007ACC"
                            Foreground="White"
                            Height="40"
                            BorderThickness="0"
                            Margin="0,0,0,10"
                            Click="EditProfile_Click"/>

                    <Button Content="Выйти"
                            Background="#DC3545"
                            Foreground="White"
                            Height="40"
                            BorderThickness="0"
                            Click="Logout_Click"/>
                </StackPanel>
            </Border>

            <!-- Статистика и настройки -->
            <StackPanel Grid.Column="1">
                <!-- Статистика -->
                <Border Background="#2D2D2D"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Статистика"
                                  FontSize="20"
                                  Foreground="White"
                                  Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="5"
                                          FontSize="32"
                                          Foreground="#00A0FF"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="Бронирований"
                                          Foreground="#E0E0E0"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="1500"
                                          FontSize="32"
                                          Foreground="#00A0FF"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="Бонусов"
                                          Foreground="#E0E0E0"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Настройки -->
                <Border Background="#2D2D2D"
                        CornerRadius="10"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Настройки"
                                  FontSize="20"
                                  Foreground="White"
                                  Margin="0,0,0,15"/>

                        <CheckBox Content="Получать уведомления о специальных предложениях"
                                  Style="{StaticResource CustomCheckBoxStyle}"/>

                        <CheckBox Content="Получать уведомления о статусе бронирования"
                                  Style="{StaticResource CustomCheckBoxStyle}"/>

                        <CheckBox Content="Получать новости и обновления"
                                  Style="{StaticResource CustomCheckBoxStyle}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>