<Page x:Class="BookingWPF.RoomSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RoomSelectionPage">

    <Page.Resources>
        <!-- Стиль для скроллбара -->
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Rectangle Fill="#007ACC" RadiusX="4" RadiusY="4"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid Background="Transparent">
                            <Border Background="#2D2D2D" 
                                    CornerRadius="4"/>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageUpCommand}" 
                                                Background="Transparent"
                                                Opacity="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageDownCommand}" 
                                                Background="Transparent"
                                                Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для DatePicker -->
        <Style TargetType="{x:Type DatePicker}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Информация об отеле -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Гранд Отель"
                      FontSize="32"
                      Foreground="White"
                      FontWeight="Bold"/>
            <TextBlock Text="Москва"
                      FontSize="18"
                      Foreground="#E0E0E0"
                      Margin="0,5"/>
        </StackPanel>

        <!-- Фильтры номеров -->
        <Border Grid.Row="1" 
                Background="#2D2D2D"
                CornerRadius="10"
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <DatePicker Grid.Column="0"
                           Margin="0,0,10,0">
                    <DatePicker.Resources>
                        <Style TargetType="DatePickerTextBox">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#1E1E1E"/>
                        </Style>
                    </DatePicker.Resources>
                </DatePicker>

                <DatePicker Grid.Column="1"
                           Margin="10,0">
                    <DatePicker.Resources>
                        <Style TargetType="DatePickerTextBox">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#1E1E1E"/>
                        </Style>
                    </DatePicker.Resources>
                </DatePicker>

                <Button Grid.Column="2"
                        Content="Найти номера"
                        Background="#007ACC"
                        Foreground="White"
                        Padding="20,10"
                        Height="40"
                        BorderThickness="0"
                        Margin="10,0,0,0"/>
            </Grid>
        </Border>

        <!-- Список номеров -->
        <ScrollViewer Grid.Row="2">
            <StackPanel>
                <!-- Первая карточка (существующая) -->
                <Border Background="#2D2D2D"
                        CornerRadius="10"
                        Margin="0,0,0,20"
                        Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Фото номера -->
                        <Border Background="#1E1E1E"
                                Height="150"
                                CornerRadius="5"/>

                        <!-- Информация о номере -->
                        <StackPanel Grid.Column="1" Margin="20,0">
                            <TextBlock Text="Люкс с видом на город"
                                      FontSize="24"
                                      Foreground="White"
                                      FontWeight="Bold"/>

                            <WrapPanel Margin="0,10">
                                <Border Background="#1E1E1E"
                                        CornerRadius="5"
                                        Padding="10,5"
                                        Margin="0,0,10,5">
                                    <TextBlock Text="Площадь: 45 м²"
                                              Foreground="#E0E0E0"/>
                                </Border>
                                <Border Background="#1E1E1E"
                                        CornerRadius="5"
                                        Padding="10,5"
                                        Margin="0,0,10,5">
                                    <TextBlock Text="2 комнаты"
                                              Foreground="#E0E0E0"/>
                                </Border>
                                <Border Background="#1E1E1E"
                                        CornerRadius="5"
                                        Padding="10,5"
                                        Margin="0,0,10,5">
                                    <TextBlock Text="До 3 гостей"
                                              Foreground="#E0E0E0"/>
                                </Border>
                            </WrapPanel>

                            <TextBlock Text="Удобства:"
                                      Foreground="White"
                                      Margin="0,10,0,5"/>
                            <TextBlock Text="Wi-Fi, Кондиционер, Мини-бар, Сейф, Телевизор"
                                      Foreground="#E0E0E0"
                                      TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Цена и кнопка -->
                        <StackPanel Grid.Column="2" 
                                  VerticalAlignment="Center"
                                  MinWidth="200">
                            <TextBlock Text="15000₽"
                                      FontSize="24"
                                      Foreground="#00A0FF"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="за ночь"
                                      Foreground="#E0E0E0"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,10"/>
                            <Button Content="Забронировать"
                                    Background="#007ACC"
                                    Foreground="White"
                                    Padding="20,10"
                                    Height="40"
                                    BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Вторая карточка -->
                <Border Background="#2D2D2D"
                        CornerRadius="10"
                        Margin="0,0,0,20"
                        Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="#1E1E1E"
                                Height="150"
                                CornerRadius="5"/>

                        <StackPanel Grid.Column="1" Margin="20,0">
                            <TextBlock Text="Стандартный номер"
                                      FontSize="24"
                                      Foreground="White"
                                      FontWeight="Bold"/>

                            <WrapPanel Margin="0,10">
                                <Border Background="#1E1E1E"
                                        CornerRadius="5"
                                        Padding="10,5"
                                        Margin="0,0,10,5">
                                    <TextBlock Text="Площадь: 25 м²"
                                              Foreground="#E0E0E0"/>
                                </Border>
                                <Border Background="#1E1E1E"
                                        CornerRadius="5"
                                        Padding="10,5"
                                        Margin="0,0,10,5">
                                    <TextBlock Text="1 комната"
                                              Foreground="#E0E0E0"/>
                                </Border>
                                <Border Background="#1E1E1E"
                                        CornerRadius="5"
                                        Padding="10,5"
                                        Margin="0,0,10,5">
                                    <TextBlock Text="До 2 гостей"
                                              Foreground="#E0E0E0"/>
                                </Border>
                            </WrapPanel>

                            <TextBlock Text="Удобства:"
                                      Foreground="White"
                                      Margin="0,10,0,5"/>
                            <TextBlock Text="Wi-Fi, Кондиционер, Телевизор"
                                      Foreground="#E0E0E0"
                                      TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                  VerticalAlignment="Center"
                                  MinWidth="200">
                            <TextBlock Text="8000₽"
                                      FontSize="24"
                                      Foreground="#00A0FF"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="за ночь"
                                      Foreground="#E0E0E0"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,10"/>
                            <Button Content="Забронировать"
                                    Background="#007ACC"
                                    Foreground="White"
                                    Padding="20,10"
                                    Height="40"
                                    BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Третья карточка -->
                <Border Background="#2D2D2D"
                        CornerRadius="10"
                        Margin="0,0,0,20"
                        Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="#1E1E1E"
                                Height="150"
                                CornerRadius="5"/>

                        <StackPanel Grid.Column="1" Margin="20,0">
                            <TextBlock Text="Стандартный номер"
                                      FontSize="24"
                                      Foreground="White"
                                      FontWeight="Bold"/>

                            <WrapPanel Margin="0,10">
                                <Border Background="#1E1E1E"
                                        CornerRadius="5"
                                        Padding="10,5"
                                        Margin="0,0,10,5">
                                    <TextBlock Text="Площадь: 25 м²"
                                              Foreground="#E0E0E0"/>
                                </Border>
                                <Border Background="#1E1E1E"
                                        CornerRadius="5"
                                        Padding="10,5"
                                        Margin="0,0,10,5">
                                    <TextBlock Text="1 комната"
                                              Foreground="#E0E0E0"/>
                                </Border>
                                <Border Background="#1E1E1E"
                                        CornerRadius="5"
                                        Padding="10,5"
                                        Margin="0,0,10,5">
                                    <TextBlock Text="До 2 гостей"
                                              Foreground="#E0E0E0"/>
                                </Border>
                            </WrapPanel>

                            <TextBlock Text="Удобства:"
                                      Foreground="White"
                                      Margin="0,10,0,5"/>
                            <TextBlock Text="Wi-Fi, Кондиционер, Телевизор"
                                      Foreground="#E0E0E0"
                                      TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" 
                                  VerticalAlignment="Center"
                                  MinWidth="200">
                            <TextBlock Text="8000₽"
                                      FontSize="24"
                                      Foreground="#00A0FF"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,10"/>
                            <TextBlock Text="за ночь"
                                      Foreground="#E0E0E0"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,10"/>
                            <Button Content="Забронировать"
                                    Background="#007ACC"
                                    Foreground="White"
                                    Padding="20,10"
                                    Height="40"
                                    BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>