<Page x:Class="BookingWPF.RoomSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RoomSelectionPage">

    <Page.Resources>
        <!-- Стиль для скроллбара -->
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Rectangle Fill="#007ACC" RadiusX="4" RadiusY="4"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid Background="Transparent">
                            <Border Background="#2D2D2D" 
                                    CornerRadius="4"/>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageUpCommand}" 
                                                Background="Transparent"
                                                Opacity="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageDownCommand}" 
                                                Background="Transparent"
                                                Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для DatePicker -->
        <Style TargetType="{x:Type DatePicker}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Информация об отеле -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock x:Name="HotelNameText"
                      FontSize="32"
                      Foreground="White"
                      FontWeight="Bold"/>
            <TextBlock x:Name="HotelCityText"
                      FontSize="18"
                      Foreground="#E0E0E0"
                      Margin="0,5"/>
        </StackPanel>

        <!-- Фильтры номеров -->
        <Border Grid.Row="1" 
                Background="#2D2D2D"
                CornerRadius="10"
                Padding="20"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Дата заезда -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Дата заезда"
                              Foreground="White"
                              Margin="0,0,0,5"/>
                    <DatePicker x:Name="CheckInDatePicker"
                               Height="40">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Background" Value="White"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </StackPanel>

                <!-- Дата выезда -->
                <StackPanel Grid.Column="1" Margin="10,0">
                    <TextBlock Text="Дата выезда"
                              Foreground="White"
                              Margin="0,0,0,5"/>
                    <DatePicker x:Name="CheckOutDatePicker"
                               Height="40">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Background" Value="White"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </StackPanel>

                <!-- Кнопка поиска -->
                <Button Grid.Column="2"
                        Content="Найти номера"
                        Background="#007ACC"
                        Foreground="White"
                        Padding="20,10"
                        Height="40"
                        BorderThickness="0"
                        Margin="10,0,0,0"
                        VerticalAlignment="Bottom"
                        Click="SearchRooms_Click"/>
            </Grid>
        </Border>

        <!-- Список номеров -->
        <ScrollViewer Grid.Row="2">
            <StackPanel x:Name="RoomsStackPanel">
                <!-- Карточки номеров будут добавляться здесь динамически -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>